                         WindowButtonCommandsOverlayBehavior="Never" 
                        NonActiveWindowTitleBrush="{DynamicResource AccentColorBrush}"  WindowStartupLocation="CenterScreen" Loaded="MetroWindow_Loaded">

    <Window.Resources>
        <Style x:Key="AlternatingListViewItemStyle" TargetType="{x:Type ListViewItem}">
            <Style.Triggers>
                <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                    <Setter Property="Background" Value="LightCyan"></Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>



    <Grid>

        <Grid.RowDefinitions>

            <RowDefinition Height="10" MaxHeight="30" />
            <RowDefinition Height="100"/>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200"/>

        </Grid.ColumnDefinitions>

        <!--<StackPanel Grid.Column="0" Grid.Row="2" Margin="10,0,-98,-0.25" Grid.ColumnSpan="2">-->
        <Rectangle Grid.ColumnSpan="2" Fill="#FFF4F4F5" Margin="0,87,-704,0" Grid.Row="4" Stroke="Black" Grid.RowSpan="2"/>



        <Rectangle Grid.ColumnSpan="2" Fill="#FFF4F4F5" Margin="0,0,-704,54" Stroke="Black" Grid.RowSpan="3"/>

        <!--<StackPanel Grid.Column="0" Grid.Row="2" Margin="10,0,-98,-0.25" Grid.ColumnSpan="2">-->
        <TextBlock  Text="Select Customer" Grid.Column="0" Grid.Row="1" HorizontalAlignment="Left" Margin="21.94,0,0,-1.8" FontSize="16" RenderTransformOrigin="-1.957,3.333" Height="45.8" VerticalAlignment="Bottom"/>
        <ComboBox x:Name="Customer" Grid.Column="1" Grid.Row="1" Width="278" HorizontalAlignment="Right"
			Margin="-41.5,0,-36.5,10.467" SelectedValuePath="Id"
			controls:TextBoxHelper.Watermark="Select Customer" FontSize="16" FontFamily="Arial"
			Foreground="SlateGray" IsReadOnly="True" Height="39" VerticalAlignment="Bottom" Loaded="Customer_Loaded" SelectionChanged="Customer_SelectionChanged"/>




        <!--show listview  here -->
        <TextBlock x:Name="Pos" Grid.ColumnSpan="2" Margin="0,0,-704,0" TextWrapping="Wrap" FontSize="24" Height="48" VerticalAlignment="Top" Background="#FFDEDEDE" Grid.RowSpan="2"/>
        <TextBlock x:Name="Discount1" Grid.Column="1" HorizontalAlignment="Right" Height="24" Margin="0,0,-577,139" Grid.Row="4" TextWrapping="Wrap" Text="Discount ₵" VerticalAlignment="Bottom" Width="86" FontSize="16" FontFamily="Arial" Grid.RowSpan="2"/>
        <TextBlock x:Name="SubTotal1" Grid.Column="1" HorizontalAlignment="Right" Margin="0,31,-513,0" Grid.Row="5" TextWrapping="Wrap" Text="SubTotal ₵" Width="106" FontSize="20" FontWeight="Bold" FontFamily="Arial" Height="31" VerticalAlignment="Top"/>
        <TextBlock x:Name="Total1" Grid.Column="1" HorizontalAlignment="Right" Margin="0,58,-513,0" Grid.Row="5" TextWrapping="Wrap" Text="Total ₵" Width="68" Height="31" VerticalAlignment="Top" FontSize="20" FontWeight="Bold" FontFamily="Arial"/>
        <TextBox x:Name="Discount" Grid.Column="1" HorizontalAlignment="Right" Height="30" FontSize="18" 
                                FontFamily="Arial" 
                                Margin="0,0,-675,139" Grid.Row="4" VerticalAlignment="Bottom" Width="98" 
                                Grid.RowSpan="2" controls:TextBoxHelper.Watermark="0.00" HorizontalContentAlignment="Left" TextChanged="Discount_TextChanged" LostFocus="Discount_LostFocus"/>
        <controls:NumericUpDown x:Name="SubTotal" IsReadOnly="True" Grid.Column="1" HorizontalAlignment="Right" 
                                Margin="0,0,-681,100" Grid.Row="5" Width="168" Background="#FF150D0D" Foreground="#FF66FF39"
                                controls:TextBoxHelper.Watermark="0.00" FontSize="18" FontFamily="Arial" Height="30"
                                VerticalAlignment="Bottom" HorizontalContentAlignment="Left"/>
        <controls:NumericUpDown x:Name="Total" Grid.Column="1" IsReadOnly="True"  HorizontalAlignment="Right" 
                                Margin="0,56,-681,0" Grid.Row="5" Width="168" Height="30" VerticalAlignment="Top" 
                                Background="#FF251D1D" Foreground="#FFF11600" FontSize="18" FontFamily="Arial" 
                                controls:TextBoxHelper.Watermark="0.00" HorizontalContentAlignment="Left"/>

        <Button x:Name="PreviewOnly" Content="Preview Only" Grid.Column="1" HorizontalAlignment="Right" Height="33" Margin="0,0,-352,17" Grid.Row="5" VerticalAlignment="Bottom" Width="116" FontSize="12" RenderTransformOrigin="0.5,0.508" Click="PrintAndSave_Click_1"/>
        <Button x:Name="SavedOnly" Content="Print &amp; Save Only" Grid.Column="1" HorizontalAlignment="Right" Height="33" Margin="0,0,-484,17" Grid.Row="5" VerticalAlignment="Bottom" Width="128" FontSize="12" Click="SavedOnly_Click"/>
        <Button x:Name="Cancel" Content="Cancel" Grid.Column="1" HorizontalAlignment="Right" Height="33" Margin="0,0,-682,17" Grid.Row="5" VerticalAlignment="Bottom" Width="88" FontSize="12" Click="Cancel_Click" RenderTransformOrigin="-0.642,0.576"/>


        <ListView x:Name="OrderList"  Grid.Row="2" Grid.RowSpan="3" Grid.ColumnSpan="2" Grid.Column="0"
                  Margin="0,100,-704,76" FontSize="14" AlternationCount="2"  ItemContainerStyle="{StaticResource AlternatingListViewItemStyle}"
                  FontWeight="Normal" IsSynchronizedWithCurrentItem="False">
            <ListView.View>
                <GridView>
                    <GridViewColumn x:Name="ListItem" DisplayMemberBinding="{Binding ItemName}" Header="Drug Description" Width="350"/>
                    <GridViewColumn x:Name="ListQuantity" DisplayMemberBinding="{Binding Quantity}" Header="Quantity" Width="250"/>
                    <GridViewColumn x:Name="ListUnitPrice" DisplayMemberBinding="{Binding UnitPrice}" Header="Unit Price" Width="250"/>
                    <GridViewColumn x:Name="ListTotalCost" DisplayMemberBinding="{Binding Total}" Header="Total Cost" Width="250"/>
                </GridView>
            </ListView.View>
        </ListView>
